<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.maffan.themeinaction">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RedActivity"
            android:label="Red Theme"
            android:theme="@style/RedTheme"
            />
        <activity android:name=".GreenActivity"
            android:label="Green Theme"
            android:theme="@style/GreenTheme"/>
        <activity android:name=".BlueActivity"
            android:label="Blue Theme"
            android:theme="@style/BlueTheme">
        </activity>
    </application>

</manifest>